/**index.wxss**/
page{
	/*height: 100%;*/
}
.container{
	justify-content: flex-start;
	padding: 0;
	background: #F0EDED;
}
.container .banner{
	width: 100%;
	height: 180px;
}
.container .banner swiper{
	width: 100%;
	height: 100%;
}
.container .banner swiper swiper-item{
	width: 100%;
	height: 100%;
}
.container .banner swiper swiper-item image{
	width: 100%;
	height: 100%;
}
/*搜索框*/
.searchBar{
	margin-top: 15px;
	background: #fff;
	width: 100%;
	height: 30px;
	font-size: 12px;
	border-bottom: 1px solid #E3E3E3;
	border-top: 1px solid #E3E3E3;
	display: flex;
}
.searchBar input{
	height: 30px;
	line-height: 30px;
	padding-left: 10px;
	flex: 9;
}
.searchBar image{
	flex: 1;
	width: 100%;
	height: 100%;
}
/*分类*/
.category{
	width: 100%;
	
}
.category .title{
	box-sizing: border-box;
	height: 50px;
	width: 100%;
	line-height: 50px;
	font-size: 14px;
	padding-left: 20px;
}
.category .listbox{
	width: 100%;
	background:#fff;
}
.category .listbox .list{
	display: flex;
	height: 80px;
	width: 100%;
}
.category .listbox .secondlist{
	border-bottom: 1px solid #E3E3E3;
	border-top: 1px solid #E3E3E3;
}
.category .listbox .list .list-item{
	flex: 1;
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction: column;
}
.category .listbox .list .second-item{
	border-left: 1px solid #E3E3E3;
	border-right: 1px solid #E3E3E3;
}
.category .listbox .list .list-item view{
	width: 100%;
	text-align: center;
}
.category .listbox .list .list-item view image{
	width: 35px;
	height: 35px;
}
.category .listbox .list .list-item  text{
	font-size: 12px;
}
/*主播*/
.speaker{
	width: 100%;
}
.speaker .title{
	width: 100%;
	height: 50px;
	line-height: 50px;
	font-size: 16px;
	box-sizing: border-box;
	padding-left: 20px;
	display: flex;
	align-items: center;
}
.speaker .title text{
	flex: 8;
}
.speaker .title image{
	width: 10px;
	height: 20px;
	padding-right: 10px;
}
.speaker .speaker-list{
	display: flex;
	flex-wrap: wrap;
	width: 100%;
}
.speaker .speaker-list .speaker-list-item{
	width: 50%;
	height: 80px;
	display: flex;
	align-items: center;
}
.speaker .speaker-list .speaker-list-item view image{
	width: 55px;
	height: 55px;
	border-radius: 50%;
}
.speaker .speaker-list .speaker-list-item view{
	display: flex;
	flex-direction: column;
	margin-left: 10px;
}
.speaker .speaker-list .speaker-list-item view .name{
	font-size: 14px;
}
.speaker .speaker-list .speaker-list-item view .programnum{
	font-size: 12px;
	margin-top: 10px;
}
