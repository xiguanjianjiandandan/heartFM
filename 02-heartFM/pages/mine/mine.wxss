page {
  height: 100%; }
  page .box {
    background: #F0EDED;
    width: 100%;
    overflow: hidden; }
    page .box .userbox {
      width: 100%; }
      page .box .userbox .userbg {
        width: 100%;
        height: 150px; }
      page .box .userbox .avatar {
        width: 50px;
        height: 50px;
        border-radius: 500%;
        background: #fff;
        margin: -20px 0 0 20px;
        vertical-align: middle; }
      page .box .userbox .name {
        line-height: 30px;
        font-size: 14px;
        margin-left: 10px; }
      page .box .userbox .qiandao {
        width: 50px;
        height: 20px;
        border-radius: 10px;
        position: absolute;
        right: 10px;
        top: 120px; }
    page .box .mine-list {
      margin-bottom: 20px;
      margin-top: 20px;
      display: flex;
      flex-direction: column;
      border: 1px solid #E3E3E3;
      border-top: 0;
      width: 90%;
      margin-left: 5%;
      margin-right: 5%;
      border-radius: 10px; }
    page .box .mine-list .listitems {
      display: flex;
      box-sizing: border-box;
      width: 100%;
      padding-left: 10px;
      height: 40px;
      line-height: 40px;
      align-items: center;
      border-top: 1px solid #E3E3E3; }
      page .box .mine-list .listitems image {
        width: 20px;
        height: 20px;
        vertical-align: middle; }
      page .box .mine-list .listitems text {
        font-size: 14px;
        margin-left: 15px; }
