.box {
  width: 100%;
  height: 100%; }
  .box .usersetting {
    height: 70px;
    width: 90%;
    margin-left: 5%;
    margin-right: 5%;
    border: 1px solid #E3E3E3;
    border-radius: 10px;
    display: flex;
    align-items: center;
    margin-top: 15px;
    margin-bottom: 15px; }
    .box .usersetting .avatar {
      width: 50px;
      height: 50px;
      border-radius: 50%;
      margin-left: 10px; }
    .box .usersetting .name {
      font-size: 14px;
      flex: 1;
      margin-left: 20px; }
    .box .usersetting .updatebtn {
      width: 80px;
      height: 30px;
      font-size: 12px;
      line-height: 30px;
      text-align: center;
      margin-right: 10px; }
  .box .settinglist {
    margin-bottom: 20px;
    margin-top: 20px;
    display: flex;
    flex-direction: column;
    border: 1px solid #E3E3E3;
    border-top: 0;
    width: 90%;
    margin-left: 5%;
    margin-right: 5%;
    border-radius: 10px;
    display: flex;
    flex-direction: column; }
    .box .settinglist .listitems {
      display: flex;
      box-sizing: border-box;
      width: 100%;
      padding-left: 10px;
      padding-right: 10px;
      height: 40px;
      line-height: 40px;
      align-items: center;
      border-top: 1px solid #E3E3E3;
      border-radius: 10px; }
      .box .settinglist .listitems .leftIcon {
        width: 20px;
        height: 20px;
        vertical-align: middle; }
      .box .settinglist .listitems text {
        font-size: 14px;
        margin-left: 15px;
        flex: 1; }
      .box .settinglist .listitems .rightIcon {
        width: 10px;
        height: 20px;
        vertical-align: middle; }
      .box .settinglist .listitems .switchbox {
        width: 40px;
        height: 20px; }
        .box .settinglist .listitems .switchbox switch {
          width: 40px;
          height: 20px; }
  .box .last .listitems .rightIcon {
    width: 10px;
    height: 20px; }
  .box .exitbtn {
    width: 90%;
    margin-left: 5%;
    margin-right: 5%;
    height: 40px;
    line-height: 40px;
    font-size: 12px;
    margin-bottom: 20px; }
